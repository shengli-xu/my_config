# split panes using | and -
bind-key | split-window -h
bind-key - split-window -v
unbind-key '"'
unbind-key %

# switch panes using Alt-arrow without prefix
bind-key -n M-Left select-pane -L
bind-key -n M-Right select-pane -R
bind-key -n M-Up select-pane -U
bind-key -n M-Down select-pane -D

# enable mouse control (clickable windows, panes, resizable panes)
set-option -g mouse on
bind -T copy-mode C-c send-keys -X copy-pipe-and-cancel 'xclip -in -selection clipboard'

# List of plugins
set-option -g @plugin 'tmux-plugins/tpm'
set-option -g @plugin 'tmux-plugins/tmux-sensible'
set-option -g @plugin 'tmux-plugins/tmux-resurrect'
set-option -g @plugin 'dracula/tmux'

set-option -g @dracula-show-powerline true
set-option -g @dracula-show-left-icon session
set-option -g @dracula-plugins "cpu-usage gpu-usage ram-usage weather time"
set-option -g @dracula-show-fahrenheit false
set-option -g @dracula-fixed-locaiton "Greenville, South Carolina"
set-option -g @dracula-show-location false
set-option -g @dracula-day-month false
set-option -g @dracula-military-time true

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
